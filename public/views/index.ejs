<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- <link rel="stylesheet" href="/public/css/style.css"> -->
    <title>Lista de Livros</title>
</head>

<body>
    <header>
        <%- include('components/header.ejs'); %>
    </header>
    <main>
        <div class="center-container">
            <div id="book_container" class="flex-container">
                <% books.forEach(book => { %>
                    <div class="card" style="width: 14rem;">
                        <img src="https://m.media-amazon.com/images/I/81Bhe7xf71L._SY466_.jpg" class="card-img-top" alt="...">
                        <div class="card-body">
                          <h5 class="card-title"><%= book.title %></h5>
                          <p class="card-text"><%= book.author %></p>
                          <p class="card-text"><%= book.price %></p>
                          <button class="btn btn-primary" id="verMaisLivro" data-book-id="<%= book._id %>">Ver Mais</button>
                          <button class="btn btn-primary">Adicionar</button>
                        </div>
                      </div>
                <% }) %>
            </div>
        </div>
    </main>
    <footer>
        <%- include('components/footer.ejs'); %>
    </footer>
    <script src="/public/js/logicScript.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>