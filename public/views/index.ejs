<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>HomePage</title>
  <link rel="stylesheet" href="/public/css/index.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
  <!-- <div class="radial-gradient"></div>
  <div class="alice"><img src="/public/assets/imgs/alice.png" alt="alice"></div> -->
  <!-- ------------------------------------------------------------------------------------------------------------------------------- -->
  <%- include('components/header.ejs') %>  
  <section id="promocoes" class="section">
    <div class="container">
      <div class="carousel">
        <div class="carousel-slide">
          <img src="http://placehold.it/350x250" alt="Imagem 1">
        </div>
        <div class="carousel-slide">
          <img src="http://placehold.it/350x250" alt="Imagem 2">
        </div>
        <div class="carousel-slide">
          <img src="http://placehold.it/350x250" alt="Imagem 3">
        </div>
      </div>
      <div class="carousel-button">
        <button id="prevButton" class="button">Anterior</button>
        <button id="nextButton" class="button">Próximo</button>
      </div>
    </div>
  </section>

  <!-- ------------------------------------------------------------------------------------------------------------------------------- -->

  <section id="newlaunch" class="section">
    <div class="container1">
      <div class="carousel1">
        <% books.filter(book=> book.keywords.includes('newlaunch')).forEach((book, index) => { %>
          <div class="item <%= String.fromCharCode(97 + index) %>">
            <div class="modal">
              <a class="verMaisLivro" data-book-id="<%= book._id %>"><img
                  src="/public/assets/books/rodadotempo.jpg" alt="<%= book.title %>"></a>
              <h3>
                <%= book.title %>
              </h3>
              <p class="text<%= index + 1 %> hidden">
                <%= book.author %>
              </p>
              <p class="text<%= index + 1 %> hidden">
                <%= book.price %>€
              </p>
              <button class="button<%= index + 1 %> hidden">Adicionar</button>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
    <div class="botoes">
      <button class="next">Next</button>
      <button class="prev">Prev</button>
    </div>
  </section>


  <!------------------------------------------------------------------------------------------------------------------------------------------------------- -->

  <section id="topcompras" class="section">
    <div class="container2">
      <div class="carousel2">
        <% books.filter(book=> book.keywords.includes('topcompras')).forEach((book, index) => { %>
          <div class="item <%= String.fromCharCode(97 + index) %>">
            <div class="modal">
              <a class="verMaisLivro" data-book-id="<%= book._id %>"><img
                  src="/public/assets/books/rodadotempo.jpg" alt="<%= book.title %>"></a>
              <h3>
                <%= book.title %>
              </h3>
              <p class="text<%= index + 1 %> hidden">
                <%= book.author %>
              </p>
              <p class="text<%= index + 1 %> hidden">
                <%= book.price %>€
              </p>
              <button class="button<%= index + 1 %> hidden">Adicionar</button>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
    <button class="next2">Next</button>
    <button class="prev2">Prev</button>
  </section>

  <!-- ------------------------------------------------------------------------------------------------------------------------------- -->


  <section id="sugestaopod" class="section">
    <div class="container">

    </div>

  </section>

  <script src="/public/js/index2.js"></script>
  <script src="/public/js/logicScript.js"></script>
</body>

</html>